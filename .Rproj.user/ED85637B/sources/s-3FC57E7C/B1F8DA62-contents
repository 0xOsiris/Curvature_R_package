\name{curvature}
\alias{curvature}
\title{Curvature Calculation
Calculate the curvature of a parametric curve}
\usage{
curvature(alpha, t)
}
\arguments{
\item{alpha}{A vector of expressions defining the curve}

\item{t}{Evaluation parameter}
}
\value{
Scalar value Curvature of alpha at time t
}
\description{
Curvature Calculation
Calculate the curvature of a parametric curve
}
\details{
alpha must be a vector of parametric expressions with param 't'
}
\examples{
kAlpha <- curvature(c(expression(1+.5*cos(t),1+.1*sin(t),-1)), 1)
dataSet= matrix(c(expression(1+.5*cos(t),1+.1*sin(t),sin(t))), nrow=1,ncol=3,byrow=TRUE)
alphaN=dataSet[1,]
kAlpha<-curvature(alphaN,1)
}
\author{
Leyton Taylor
}
